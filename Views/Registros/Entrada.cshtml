@model Estacionamento.Models.Registro

@{
    ViewData["Title"] = "Create";
}

<h1>Registrar Entrada</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Entrada">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Entrada" class="control-label"></label>
                <input asp-for="Entrada" class="form-control" />
                <span asp-validation-for="Entrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeiculoId" class="control-label"></label>
                <select asp-for="VeiculoId" class ="form-control" asp-items="ViewBag.VeiculoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FuncionarioId" class="control-label"></label>
                <select asp-for="FuncionarioId" class ="form-control" asp-items="ViewBag.FuncionarioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EstacionamentoId" class="control-label"></label>
                <select asp-for="EstacionamentoId" class ="form-control" asp-items="ViewBag.EstacionamentoId"></select>
            </div>
            <div class="form-group" style="padding-top: 6px">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
